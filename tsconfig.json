{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": true,
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/axios",
            "nuxt-i18n",
        ],
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "sourceMap": true,
    },
    "include": [
        // Don't know why, but this is needed for the typescript compiler to actually work with the .d.ts files + eslint properly
        "**/*",
    ],
    "exclude": [
        "node_modules",
        ".nuxt",
        ".astro",
        "dist",
    ]
}
